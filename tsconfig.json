{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"DOM",
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"resolveJsonModule": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"**/*.test.*"
	]
}