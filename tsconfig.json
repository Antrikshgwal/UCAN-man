{
	"compilerOptions": {
		"module": "node16",
		"target": "es2022",
		"outDir": "out",
		"lib": [
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node16",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}